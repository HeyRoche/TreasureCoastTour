<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffd600"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <TextView
            android:textStyle="bold"
            android:id="@+id/headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Treasure Coast Tours"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="36sp" />

    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:padding="14dp"
        android:rowCount="2">

        <!--Row 1 -->

        <!--Column 1-->

        <android.support.v7.widget.CardView
            android:id="@+id/cardEat"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_rowWeight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image1"
                    style="@style/mainImage"
                    android:src="@drawable/foodone" />

                <View
                    style="@style/specView"
                    android:layout_above="@id/image1" />

                <TextView
                    style="@style/mainText"
                    android:text="EAT" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <!--Column 2-->

        <android.support.v7.widget.CardView
            android:id="@+id/cardPlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_rowWeight="1"

            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/playImage"
                    style="@style/mainImage"
                    android:src="@drawable/fortpierceinlet" />

                <View
                    style="@style/specView"
                    android:layout_above="@id/playImage" />

                <TextView
                    style="@style/mainText"
                    android:text="Play" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <!--Row 2-->
        <!--Column 1-->

        <android.support.v7.widget.CardView
            android:id="@+id/cardShop"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_rowWeight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/shopImage"
                    style="@style/mainImage"
                    android:src="@drawable/treasurecoastsquare" />

                <View
                    style="@style/specView"
                    android:layout_above="@id/shopImage" />

                <TextView
                    style="@style/mainText"
                    android:text="shop" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <!--Row 2-->
        <!--Column 2-->

        <android.support.v7.widget.CardView
            android:id="@+id/cardExplore"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_rowWeight="1"

            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/exploreImage"
                    style="@style/mainImage"
                    android:src="@drawable/sunrise_theatre" />

                <View
                    style="@style/specView"
                    android:layout_above="@id/exploreImage" />

                <TextView
                    style="@style/mainText"
                    android:text="explore" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </GridLayout>
</LinearLayout>